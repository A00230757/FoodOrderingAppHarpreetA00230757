<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHome"
    android:orientation="vertical"
    android:background="@drawable/image3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:textColor="#000000"
        android:textSize="35sp"
        android:text="ADMIN HOME"/>

    <Button
        android:id="@+id/bt_changepassword"
        android:textSize="22sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:text= "Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="changePassword"/>

    <Button
        android:id="@+id/bt_manage_category"
        android:textSize="22sp"
        android:text= " Manage Category"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="manageCategory"/>

    <Button
        android:id="@+id/bt_manage_products"
        android:textSize="22sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:text= " Manage Food Items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="manageProducts"/>
    <Button
        android:id="@+id/bt_viewAllOrders"
        android:textSize="22sp"
        android:text= "View Orders"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="viewAllOrders"/>
    <Button
        android:id="@+id/bt_viewDailySale"
        android:textSize="22sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:text= "View DAILY SALE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="viewDailySale"/>
    <Button
        android:id="@+id/bt_viewReviews"
        android:textSize="22sp"
        android:text= "View Reviews"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="viewReviews"/>



</LinearLayout>