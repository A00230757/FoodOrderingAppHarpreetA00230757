<?xml version="1.0" encoding="utf-8"?>
<!-- - -->
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_kitchenhome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Order No."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_kitchenhomeorderno"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Order No."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Order Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_kitchenhomeorderdate"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Order No."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text="Item name     10"
            android:textSize="20sp"
            android:id="@+id/tv_kitchenhomeorderitems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button

            android:layout_margin="5dp"
            android:textSize="25sp"
            android:background="#ff0000"
            android:text="Pending"
            android:textColor="#ffffff"
            android:id="@+id/btn_kitchenhomeorderstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
