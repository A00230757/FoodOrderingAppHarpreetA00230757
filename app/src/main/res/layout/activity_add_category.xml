<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbackground">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddCategory"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            android:textColor="#000000"
            android:textSize="35sp"
            android:text="ADD CATEGORY"/>




        <EditText
            android:id="@+id/et_categoryname"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:hint="ENTER CATEGORY NAME"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/et_categorydesc"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            android:hint="ENTER CATEGORY DESCRIPTION"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imv_category"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_margin="20dp"
            android:layout_height="200dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt1"
                android:text="CAMERA"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="fromCamera"/>

            <Button
                android:id="@+id/bt2"
                android:text="GALLERY"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="fromGallery"/>

        </LinearLayout>



        <Button
            android:id="@+id/bt_submit"
            android:text="SUBMIT"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="submit"/>



    </LinearLayout>
</ScrollView>